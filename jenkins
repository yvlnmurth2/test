pipeline {
    agent{
    stages {
        stage('Stage 1') {
            steps {
                echo 'building ${JOB_NAME}'
                echo 'Hello world!' 
            }
        }
    stage('Publish Image') {
         steps{
            container('oc') {
               sh "oc start-build build-with-docker --from-dir ." docker
            }
         }
        }
    }
    post{
        success{
            echo 'sending email!' 
        }
    }
}
