pipeline {
    agent{
    dockerfile {
            filename 'docker'
            dir 'build'
            label 'my-docker'
            args '-v /tmp:/tmp'
        }
    }
    stages {
        stage('Stage 1') {
            steps {
                echo 'building ${JOB_NAME}'
                echo 'Hello world!' 
            }
        }
    }
    post{
        success{
            echo 'sending email!' 
        }
    }
}
